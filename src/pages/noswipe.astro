---
import Layout from "../components/layout_components/layout.astro";
import AnnotatedLink from "../components/prose_components/annotatedLink.astro";
import { LINKS } from "../lib/linkHelper";
import { getPhotoByName as p } from "../lib/photoHelper";
---

<Layout includeBottomNav={false}>
    <main
        class="px-4 pt-20 mb-[50svh] sm:pt-[1.7rem] flex flex-col gap-64 w-full max-w-xl"
    >
        <figure>
            <img
                src={p("2024-04-26-forest-library-isle-of-wight").paths.medium}
                alt={p("2024-04-26-forest-library-isle-of-wight").joinedCaption}
                class="select-none border-[3px] border-[#C8CDB9]"
                draggable="false"
            />
            <figcaption class="hidden font-semibold text-sm w-full p-2">
                {p("2024-04-26-forest-library-isle-of-wight").joinedCaption} From <AnnotatedLink href={LINKS.palimpsest}>Palimpsest</AnnotatedLink>.
            </figcaption>
        </figure>
        <figure>
            <img
                src={p("2021-01-14-north-atlantic-pennance-point").paths.medium}
                alt={p("2021-01-14-north-atlantic-pennance-point").joinedCaption}
                class="select-none border-[3px] border-[#e2e8f0]"
                draggable="false"
            />
            <figcaption class="hidden font-semibold text-sm w-full p-2">
                {p("2021-01-14-north-atlantic-pennance-point").joinedCaption} From <AnnotatedLink href={LINKS.horizons}>Horizons</AnnotatedLink>.
            </figcaption>
        </figure>
        <figure>
            <div class="flex gap-3 sm:gap-4">
                <img
                    src={p("2024-09-03-shed-train-window-weymouth").paths.medium}
                    alt={p("2024-09-03-shed-train-window-weymouth").joinedCaption}
                    class="select-none w-[calc(50%_-_8px)]"
                    draggable="false"
                />
                <img
                    src={p("2024-05-17-bear-witness-belsize-park").paths.medium}
                    alt={p("2024-05-17-bear-witness-belsize-park").joinedCaption}
                    class="select-none border-[3px] border-black w-[calc(50%_-_8px)]"
                    draggable="false"
                />
            </div>
            <figcaption class="hidden font-semibold text-sm w-full p-2">
                {p("2024-05-17-bear-witness-belsize-park").joinedCaption} From <AnnotatedLink href={LINKS.palimpsest}>Palimpsest</AnnotatedLink>.
            </figcaption>
        </figure>
        <figure>
            <img
                src={p("2024-05-25-la-corbiere-st-brelade-jersey").paths.medium}
                alt={p("2024-05-25-la-corbiere-st-brelade-jersey").joinedCaption}
                class="select-none shadow-[4px_4px_0_rgba(10,_114,_123,_0.09)]"
                draggable="false"
            />
            <figcaption class="hidden font-semibold text-sm w-full p-2">
                {p("2024-05-25-la-corbiere-st-brelade-jersey").joinedCaption} From <AnnotatedLink href={LINKS.palimpsest}>Palimpsest</AnnotatedLink>.
            </figcaption>
        </figure>
        <!-- <div class="mb-[20svh] text-center font-semibold text-sm">
            <AnnotatedLink staticUnderline={false} type="circle"
                >INSTAGRAM</AnnotatedLink
            >
        </div> -->
    </main>
</Layout>
